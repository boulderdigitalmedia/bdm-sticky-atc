<div
  id="bdm-sticky-atc-bar-root"
  class="bdm-sticky-atc-bar-root"
  data-product-id="{{ product.id }}"
  data-product-handle="{{ product.handle }}"
  data-shop-domain="{{ shop.permanent_domain }}"
  data-product-title="{{ product.title | escape }}"
>
  <!-- Sticky bar will be rendered here by JS -->
</div>

{{ 'sticky-atc-bar.css' | asset_url | stylesheet_tag }}
{{ 'sticky-atc-bar.js' | asset_url | script_tag }}

{% schema %}
{
  "name": "Sticky Add to Cart Bar",
  "target": "body",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_on_desktop",
      "label": "Show on desktop",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_on_mobile",
      "label": "Show on mobile",
      "default": true
    },
    {
      "type": "text",
      "id": "free_footer_text",
      "label": "Free plan footer text",
      "default": "Powered by Boulder Digital Media"
    }
  ],
  "enabled_on": {
    "templates": ["product"]
  }
}
{% endschema %}
