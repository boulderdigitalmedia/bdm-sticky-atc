<div
  id="bdm-sticky-atc"
  class="bdm-sticky-atc"
  aria-hidden="true"
  data-bdm-sticky-atc
  data-show-desktop="{{ block.settings.show_desktop }}"
  data-show-mobile="{{ block.settings.show_mobile }}"
  data-show-on-scroll="{{ block.settings.show_on_scroll }}"
  data-scroll-offset="{{ block.settings.scroll_offset }}"
  data-show-title="{{ block.settings.show_title }}"
  data-show-price="{{ block.settings.show_price }}"
  data-show-qty="{{ block.settings.show_qty }}"
  data-show-variant="{{ block.settings.show_variant }}"
  data-show-selling-plan="{{ block.settings.show_selling_plan }}"
  data-bg="{{ block.settings.bar_bg }}"
  data-text="{{ block.settings.text_color }}"
  data-font-size="{{ block.settings.font_size }}"
  data-radius="{{ block.settings.bar_radius }}"
  data-shadow="{{ block.settings.enable_shadow }}"
  data-button-bg="{{ block.settings.button_bg }}"
  data-button-text="{{ block.settings.button_text_color }}"
  data-button-radius="{{ block.settings.button_radius }}"
  data-button-style="{{ block.settings.button_style }}"
  data-button-size="{{ block.settings.button_size }}"
>
  <div class="bdm-inner">
    <div class="bdm-left">
      <div class="bdm-title"></div>
      <div class="bdm-price"></div>
    </div>
    <div class="bdm-right">
      <input class="bdm-qty" type="number" min="1" value="1" />
      <select class="bdm-variants"></select>
      <select class="bdm-selling-plans"></select>
      <button class="bdm-atc"></button>
    </div>
  </div>
</div>

<link rel="stylesheet" href="{{ 'sticky-atc-bar.css' | asset_url }}">
<script src="{{ 'sticky-atc-bar.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Sticky Add To Cart Bar",
  "target": "body",
  "settings": [
    { "type": "checkbox", "id": "show_desktop", "label": "Show on desktop", "default": true },
    { "type": "checkbox", "id": "show_mobile", "label": "Show on mobile", "default": true },
    { "type": "checkbox", "id": "show_on_scroll", "label": "Show only after scrolling", "default": false },
    { "type": "range", "id": "scroll_offset", "label": "Scroll offset (px)", "min": 0, "max": 800, "step": 50, "default": 250 },

    { "type": "checkbox", "id": "show_title", "label": "Show product title", "default": true },
    { "type": "checkbox", "id": "show_price", "label": "Show price", "default": true },
    { "type": "checkbox", "id": "show_qty", "label": "Show quantity selector", "default": true },
    { "type": "checkbox", "id": "show_variant", "label": "Show variant selector", "default": true },
    { "type": "checkbox", "id": "show_selling_plan", "label": "Show selling plans", "default": true },

    { "type": "color", "id": "bar_bg", "label": "Bar background", "default": "#FAFAF9" },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#000000" },
    { "type": "range", "id": "font_size", "label": "Font size", "min": 12, "max": 20, "step": 1, "default": 14 },
    { "type": "range", "id": "bar_radius", "label": "Bar radius", "min": 0, "max": 24, "step": 2, "default": 12 },
    { "type": "checkbox", "id": "enable_shadow", "label": "Enable shadow", "default": true },

    { "type": "select", "id": "button_style", "label": "Button style", "options": [
      { "value": "solid", "label": "Solid" },
      { "value": "outline", "label": "Outline" }
    ], "default": "solid" },

    { "type": "select", "id": "button_size", "label": "Button size", "options": [
      { "value": "small", "label": "Small" },
      { "value": "medium", "label": "Medium" },
      { "value": "large", "label": "Large" }
    ], "default": "medium" },

    { "type": "range", "id": "button_radius", "label": "Button radius", "min": 0, "max": 24, "step": 2, "default": 12 },
    { "type": "color", "id": "button_bg", "label": "Button background", "default": "#111111" },
    { "type": "color", "id": "button_text_color", "label": "Button text color", "default": "#FFFFFF" }
  ]
}
{% endschema %}
