{% if request.page_type == 'product' %}

<div id="bdm-sticky-atc" aria-hidden="true">
  <div class="bdm-inner">
    <div class="bdm-left">
      <div id="bdm-title"></div>
      <div id="bdm-price"></div>
    </div>

    <div class="bdm-right">
      <select id="bdm-variant"></select>
      <input id="bdm-qty" type="number" min="1" value="1" />
      <button id="bdm-atc">Add to cart</button>
    </div>
  </div>
</div>

{{ 'sticky-atc.css' | asset_url | stylesheet_tag }}
{{ 'sticky-atc.js' | asset_url | script_tag }}

{% endif %}
