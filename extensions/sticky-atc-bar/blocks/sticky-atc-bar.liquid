<div
  id="bdm-sticky-atc"
  class="bdm-sticky-atc"
  aria-hidden="true"

  data-bdm-sticky-atc
  data-enable-desktop="{{ block.settings.enable_desktop }}"
  data-enable-mobile="{{ block.settings.enable_mobile }}"
  data-show-on-scroll="{{ block.settings.show_on_scroll }}"
  data-scroll-offset="{{ block.settings.scroll_offset }}"
  data-show-title="{{ block.settings.show_product_title }}"
  data-show-price="{{ block.settings.show_price }}"
  data-show-qty="{{ block.settings.show_quantity }}"

  style="
    --bdm-bg: {{ block.settings.bar_background }};
    --bdm-text: {{ block.settings.text_color }};
    --bdm-font-size: {{ block.settings.font_size }}px;
    --bdm-radius: {{ block.settings.bar_radius }}px;
    --bdm-shadow: {% if block.settings.enable_shadow %}0 6px 24px rgba(0,0,0,.12){% else %}none{% endif %};

    --bdm-button-bg: {{ block.settings.button_background }};
    --bdm-button-text: {{ block.settings.button_text_color }};
    --bdm-button-radius: {{ block.settings.button_radius }}px;
  "
>
  <div class="bdm-inner">
    <div class="bdm-left">
      <div id="bdm-title" style="display:none"></div>
      <div id="bdm-price" style="display:none"></div>
    </div>

    <div class="bdm-right">
      <input
        id="bdm-qty"
        type="number"
        min="1"
        value="1"
        style="display:none"
      />

      <button
        id="bdm-atc"
        class="bdm-button bdm-button--{{ block.settings.button_style }}"
        type="button"
      >
        {{ block.settings.button_text }}
      </button>
    </div>
  </div>
</div>

{{ 'sticky-atc-bar.css' | asset_url | stylesheet_tag }}
{{ 'sticky-atc-bar.js' | asset_url | script_tag }}

{% schema %}
{
  "name": "Sticky Add To Cart Bar",
  "target": "section",
  "settings": [
    { "type": "checkbox", "id": "enable_desktop", "label": "Show on desktop", "default": true },
    { "type": "checkbox", "id": "enable_mobile", "label": "Show on mobile", "default": true },

    { "type": "checkbox", "id": "show_on_scroll", "label": "Show only after scrolling", "default": false },
    { "type": "range", "id": "scroll_offset", "label": "Scroll offset (px)", "min": 0, "max": 1000, "step": 50, "default": 250 },

    { "type": "checkbox", "id": "show_product_title", "label": "Show product title", "default": true },
    { "type": "checkbox", "id": "show_price", "label": "Show price", "default": true },
    { "type": "checkbox", "id": "show_quantity", "label": "Show quantity selector", "default": true },

    { "type": "color", "id": "bar_background", "label": "Bar background color", "default": "#FAFAF9" },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#000000" },
    { "type": "range", "id": "font_size", "label": "Font size (px)", "min": 12, "max": 20, "step": 1, "default": 14 },

    { "type": "range", "id": "bar_radius", "label": "Bar corner radius", "min": 0, "max": 32, "step": 2, "default": 0 },
    { "type": "checkbox", "id": "enable_shadow", "label": "Enable shadow", "default": true },

    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "options": [
        { "value": "solid", "label": "Solid" },
        { "value": "outline", "label": "Outline" }
      ],
      "default": "solid"
    },

    { "type": "range", "id": "button_radius", "label": "Button radius (px)", "min": 0, "max": 32, "step": 2, "default": 8 },
    { "type": "color", "id": "button_background", "label": "Button background", "default": "#111111" },
    { "type": "color", "id": "button_text_color", "label": "Button text color", "default": "#FFFFFF" },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "Add to cart" }
  ]
}
{% endschema %}
