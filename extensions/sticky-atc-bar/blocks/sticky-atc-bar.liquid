{% if request.page_type == 'product' %}

  <div
    id="bdm-sticky-atc"
    class="bdm-sticky-atc"
    aria-hidden="true"
    data-sticky-atc
    data-product-page="true"
  >
    <div class="bdm-inner">
      <div class="bdm-left">
        <div id="bdm-title"></div>
        <div id="bdm-price"></div>
      </div>

      <div class="bdm-right">
        <input
          id="bdm-qty"
          type="number"
          min="1"
          value="1"
        />

        <button
          id="bdm-atc"
          data-bdm-atc
          type="button"
        >
          {{ settings.button_text }}
        </button>
      </div>
    </div>
  </div>

  {%- comment -%}
    Pass config to JS in a safe, deterministic way
  {%- endcomment -%}
  <script>
    window.BDM_STICKY_ATC_CONFIG = {
      enableDesktop: true,
      enableMobile: true,
      showQuantity: true,
      showVariants: true,
      buttonText: {{ settings.button_text | json }}
    };
  </script>

  <link
    rel="stylesheet"
    href="{{ 'sticky-atc-bar.css' | asset_url }}"
  >
  <script
    src="{{ 'sticky-atc-bar.js' | asset_url }}"
    defer
  ></script>

{% endif %}

{% schema %}
{
  "name": "Sticky Add To Cart Bar",
  "target": "body",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Add to cart"
    }
  ]
}
{% endschema %}
