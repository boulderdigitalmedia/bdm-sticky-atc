<div
  id="bdm-sticky-atc"
  class="bdm-sticky-atc"
  aria-hidden="true"
  data-bdm-sticky-atc

  data-enable-desktop="{{ settings.enable_desktop }}"
  data-enable-mobile="{{ settings.enable_mobile }}"
  data-show-on-scroll="{{ settings.show_on_scroll }}"
  data-scroll-offset="{{ settings.scroll_offset }}"

  data-show-title="{{ settings.show_title }}"
  data-show-price="{{ settings.show_price }}"
  data-show-qty="{{ settings.show_qty }}"
  data-show-variant="{{ settings.show_variant }}"
  data-show-selling-plan="{{ settings.show_selling_plan }}"

  style="
    --bdm-bg: {{ settings.bar_background_color }};
    --bdm-text: {{ settings.text_color }};
    --bdm-font-size: {{ settings.font_size }}px;

    --bdm-border-radius: {{ settings.border_radius }}px;
    --bdm-padding-y: {{ settings.padding_y }}px;
    --bdm-padding-x: {{ settings.padding_x }}px;
    --bdm-shadow: {{ settings.shadow }};

    --bdm-button-bg: {{ settings.button_background_color }};
    --bdm-button-text: {{ settings.button_text_color }};
    --bdm-button-radius: {{ settings.button_radius }}px;
  "
>
  <div class="bdm-inner">
    <div class="bdm-left">
      <div id="bdm-title"></div>
      <div id="bdm-price"></div>
    </div>

    <div class="bdm-right">
      <input id="bdm-qty" type="number" min="1" value="1" />
      <button id="bdm-atc" class="bdm-button" type="button">
        {{ settings.button_text }}
      </button>
    </div>
  </div>
</div>

<link rel="stylesheet" href="{{ 'sticky-atc-bar.css' | asset_url }}">
<script src="{{ 'sticky-atc-bar.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Sticky Add To Cart Bar",
  "target": "section",
  "settings": [
    { "type": "checkbox", "id": "enable_desktop", "label": "Enable on desktop", "default": true },
    { "type": "checkbox", "id": "enable_mobile", "label": "Enable on mobile", "default": true },

    { "type": "checkbox", "id": "show_on_scroll", "label": "Show after scroll", "default": false },
    { "type": "range", "id": "scroll_offset", "label": "Scroll offset", "min": 0, "max": 1000, "step": 50, "default": 300 },

    { "type": "checkbox", "id": "show_title", "label": "Show product title", "default": true },
    { "type": "checkbox", "id": "show_price", "label": "Show price", "default": true },
    { "type": "checkbox", "id": "show_qty", "label": "Show quantity selector", "default": true },
    { "type": "checkbox", "id": "show_variant", "label": "Show variant selector", "default": false },
    { "type": "checkbox", "id": "show_selling_plan", "label": "Show selling plans", "default": false },

    { "type": "color", "id": "bar_background_color", "label": "Bar background", "default": "#FAFAF9" },
    { "type": "color", "id": "text_color", "label": "Text color", "default": "#000000" },
    { "type": "range", "id": "font_size", "label": "Font size", "min": 12, "max": 20, "step": 1, "default": 14 },

    { "type": "range", "id": "border_radius", "label": "Bar radius", "min": 0, "max": 32, "step": 2, "default": 0 },
    { "type": "range", "id": "padding_y", "label": "Vertical padding", "min": 8, "max": 32, "step": 2, "default": 12 },
    { "type": "range", "id": "padding_x", "label": "Horizontal padding", "min": 8, "max": 32, "step": 2, "default": 16 },

    {
      "type": "select",
      "id": "shadow",
      "label": "Shadow",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "0 -2px 12px rgba(0,0,0,0.15)", "label": "Soft" }
      ],
      "default": "0 -2px 12px rgba(0,0,0,0.15)"
    },

    { "type": "color", "id": "button_background_color", "label": "Button background", "default": "#111111" },
    { "type": "color", "id": "button_text_color", "label": "Button text", "default": "#FFFFFF" },
    { "type": "range", "id": "button_radius", "label": "Button radius", "min": 0, "max": 32, "step": 2, "default": 6 },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "Add to cart" }
  ]
}
{% endschema %}
