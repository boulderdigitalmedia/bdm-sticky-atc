generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Shopify session storage
model ShopifySession {
  id            String   @id
  shop          String
  state         String?
  isOnline      Boolean  @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String?

  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean?
  locale        String?
  collaborator  Boolean?
  emailVerified Boolean?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([shop])
}

// Generic analytics events
model AnalyticsEvent {
  id        String   @id @default(cuid())
  shop      String
  event     String
  payload   Json?
  createdAt DateTime @default(now())

  @@index([shop])
  @@index([event])
  @@index([createdAt])
}

// Shop configuration
model ShopSettings {
  id              String   @id @default(cuid())
  shop            String   @unique

  enabled         Boolean  @default(true)
  showAfterScroll Int      @default(300)

  buttonText      String   @default("Add to cart")

  bgColor         String   @default("#000000")
  textColor       String   @default("#ffffff")

  position        String   @default("bottom") // bottom | top

  includePages    String?
  excludePages    String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Sticky ATC click / intent events
model StickyAtcEvent {
  id            String   @id @default(cuid())
  shop          String

  productId     BigInt?
  variantId     BigInt

  checkoutToken String?
  sessionId     String

  createdAt     DateTime @default(now())

  @@index([shop])
  @@index([shop, checkoutToken])
  @@index([shop, variantId])
  @@index([createdAt])
}

// Sticky ATC attributed revenue
model StickyConversion {
  id            String   @id @default(cuid())
  shop          String

  orderId       BigInt
  checkoutToken String

  revenue       Float
  currency      String

  occurredAt    DateTime
  createdAt     DateTime @default(now())

  // Named compound unique index (required for findUnique)
  @@unique([shop, orderId], name: "shop_orderId")

  @@index([shop])
  @@index([occurredAt])
}

// Optional daily rollups
model StickyMetricsDaily {
  id          String   @id @default(cuid())
  shop        String
  date        DateTime

  pageViews   Int      @default(0)
  addToCart   Int      @default(0)
  conversions Int      @default(0)
  revenue     Float    @default(0)

  @@index([shop])
  @@index([date])
}
