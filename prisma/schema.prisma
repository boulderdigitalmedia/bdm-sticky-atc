generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* ────────────────────────────────────────────── */
/* SHOPIFY SESSION STORAGE (KEEP AS-IS) */
/* ────────────────────────────────────────────── */

model ShopifySession {
  id            String   @id
  shop          String
  state         String?
  isOnline      Boolean  @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String?

  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean?
  locale        String?
  collaborator  Boolean?
  emailVerified Boolean?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([shop])
}

/* ────────────────────────────────────────────── */
/* GENERIC ANALYTICS EVENTS (KEEP AS-IS) */
/* ────────────────────────────────────────────── */

model AnalyticsEvent {
  id        String   @id @default(cuid())
  shop      String
  event     String
  payload   Json?
  createdAt DateTime @default(now())

  @@index([shop])
  @@index([event])
  @@index([createdAt])
}

/* ────────────────────────────────────────────── */
/* SHOP SETTINGS (KEEP AS-IS) */
/* ────────────────────────────────────────────── */

model ShopSettings {
  id              String   @id @default(cuid())
  shop            String   @unique

  enabled         Boolean  @default(true)
  showAfterScroll Int      @default(300)

  buttonText      String   @default("Add to cart")

  bgColor         String   @default("#000000")
  textColor       String   @default("#ffffff")

  position        String   @default("bottom") // bottom | top

  includePages    String?  // JSON array
  excludePages    String?  // JSON array

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

/* ────────────────────────────────────────────── */
/* STICKY ATC CLICK / INTENT EVENTS (NEW – CORE) */
/* ────────────────────────────────────────────── */

model StickyAtcEvent {
  id            String   @id @default(cuid())
  shop          String

  productId     BigInt?
  variantId     BigInt

  checkoutToken String?
  sessionId     String

  createdAt     DateTime @default(now())

  @@index([shop])
  @@index([shop, checkoutToken])
  @@index([shop, variantId])
  @@index([createdAt])
}

/* ────────────────────────────────────────────── */
/* STICKY ATC ATTRIBUTED REVENUE (NEW – CORE) */
/* ────────────────────────────────────────────── */

model StickyConversion {
  id            String   @id @default(cuid())
  shop          String

  orderId       BigInt
  checkoutToken String

  revenue       Float
  currency      String

  occurredAt    DateTime
  createdAt     DateTime @default(now())

  @@unique([shop, orderId])
  @@index([shop])
  @@index([occurredAt])
}

/* ────────────────────────────────────────────── */
/* OPTIONAL: DAILY METRICS (UNCHANGED) */
/* ────────────────────────────────────────────── */

model StickyMetricsDaily {
  id          String   @id @default(cuid())
  shop        String
  date        DateTime

  pageViews   Int      @default(0)
  addToCart   Int      @default(0)
  conversions Int      @default(0)
  revenue     Float    @default(0)

  @@index([shop])
  @@index([date])
}
